{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["ES2019", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "out",
    "rootDir": "src",
    "skipLibCheck": true // fix issue with jimp typings
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vscode-test"]
}

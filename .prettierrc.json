{
    "printWidth": 100,
    "trailingComma": "all",
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "bracketSameLine": false,
    "endOfLine": "auto",
    "overrides": [
        {
            "files": ".vscode/*.json",
            "options": {
                "tabWidth": 4,
                "endOfLine": "auto"
            }
        },
        {
            "files": "syntaxes/*.json",
            "options": {
                "useTabs": true
            }
        },
        {
            "files": ".prettierrc.json",
            "options": {
                "tabWidth": 4,
                "endOfLine": "auto"
            }
        },
        {
            "files": "package.json",
            "options": {
                "useTabs": true
            }
        }
    ]
}

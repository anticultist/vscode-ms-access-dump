{
    "name": "ms-access-dump-format",
    "displayName": "MS Access Dump Format",
    "description": "Syntax highlighting for the MS Access dump format",
    "license": "ISC",
    "version": "0.3.0",
    "publisher": "anticultist",
    "icon": "images/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/anticultist/vscode-ms-access-dump"
    },
    "engines": {
        "vscode": "^1.53.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:access-dump"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "access-dump",
                "aliases": [
                    "MS Access Dump",
                    "access-dump"
                ],
                "extensions": [
                    ".form",
                    ".mac",
                    ".qry",
                    ".report"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "access-dump",
                "scopeName": "source.access-dump",
                "path": "./syntaxes/access-dump.tmLanguage.json",
                "embeddedLanguages": {
                    "source.vba": "vba",
                    "source.sql": "sql",
                    "meta.embedded.block.vba": "vba"
                }
            }
        ],
        "configuration": {
            "type": "object",
            "title": "MS Access dump configuration",
            "properties": {
                "msAccessDumpFormatLanguageServer.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                }
            }
        },
        "scripts": {
            "vscode:prepublish": "npm run compile",
            "compile": "tsc -b",
            "watch": "tsc -b -w",
            "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
            "test": "sh ./scripts/e2e.sh"
        },
        "devDependencies": {
            "@types/mocha": "^8.0.3",
            "mocha": "^8.1.1",
            "@types/node": "^12.12.0",
            "eslint": "^6.4.0",
            "@typescript-eslint/parser": "^2.3.0",
            "typescript": "^4.0.2"
        }
    }
}
